rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserDoc() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid));
    }

    function isAdminOrManagerForStore(storeId) {
      return isAuthenticated()
        && (
          getUserDoc().data.role in ['ADMIN', 'MANAGER']
          || getUserDoc().data.rolesByStore[storeId] in ['ADMIN', 'MANAGER']
        );
    }

    // Leitura pública do logo para cardápio da loja.
    match /stores/{storeId}/branding/{fileName} {
      allow read: if true;
      allow write: if isAdminOrManagerForStore(storeId)
        && request.resource.size < 1 * 1024 * 1024
        && request.resource.contentType.matches('image/(png|jpeg|webp)');
    }

    // Fallback: qualquer outro arquivo exige auth.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
